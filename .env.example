# ------- SRE Toolbox Env -------
APP_NAME=SRE Toolbox
APP_ENV=dev
LOG_LEVEL=INFO
APP_UID=1000
APP_GID=1000

# Optional legacy Zabbix defaults (prefer configuring via UI now)
# ZBX_BASE_URL=https://your-zabbix.example.com
# ZBX_TOKEN=replace-me

# Celery / Redis
REDIS_URL=redis://redis:6379/0
REDIS_PREFIX=sretoolbox
TOOLKIT_STORAGE_DIR=./data/toolkits

# Frontend origin + API endpoint (used by Vite dev server); origin should not include a trailing slash
FRONTEND_BASE_URL=http://localhost:5173
VITE_API_BASE_URL=http://localhost:8080

# Database (PostgreSQL via Docker compose defaults)
DATABASE_URL=postgresql+asyncpg://sretoolbox:sretoolbox@db:5432/sretoolbox
POSTGRES_USER=sretoolbox
POSTGRES_PASSWORD=sretoolbox
POSTGRES_DB=sretoolbox

# Authentication defaults
AUTH_JWT_SECRET=insecure-development-secret-change-me
AUTH_COOKIE_SECURE=false
BOOTSTRAP_ADMIN_USERNAME=admin
BOOTSTRAP_ADMIN_PASSWORD=changeme123!
BOOTSTRAP_ADMIN_EMAIL=admin@example.com
AUDIT_LOG_RETENTION_DAYS=90

# Vault (secrets manager)
# Listener address/port inside the container and exposed host port. Change these together if 8200 conflicts locally.
VAULT_LISTEN_ADDRESS=0.0.0.0
VAULT_LISTEN_PORT=8200
VAULT_HOST_PORT=8200
VAULT_ADDR=http://vault:8200
VAULT_API_ADDR=http://vault:8200
VAULT_CLUSTER_ADDRESS=0.0.0.0
VAULT_CLUSTER_PORT=8201
VAULT_CLUSTER_ADDR=http://vault:8201
VAULT_TLS_DISABLE=true
# Provide an unseal key so the container can auto-unseal on start. Populate this file after running
# `vault operator init` once, and keep it secure (gitignored by default).
VAULT_UNSEAL_KEY_FILE=/vault/config/unseal.key
# VAULT_TOKEN is only for development; prefer AppRole or short-lived tokens in production
VAULT_TOKEN=dev-root-token
VAULT_KV_MOUNT=sre
VAULT_TLS_SKIP_VERIFY=true
CELERY_BROKER_CONNECTION_RETRY_ON_STARTUP=true
# VAULT_TOKEN_FILE=./.vault-token
# VAULT_NAMESPACE=
# VAULT_AUTH_METHOD=token
# VAULT_APPROLE_ROLE_ID=
# VAULT_APPROLE_SECRET_ID=

# Optional auth provider configuration source
# AUTH_PROVIDERS_FILE=./config/auth-providers.json

# Optional explicit CORS overrides (comma separated)
# CORS_ORIGINS=https://admin.example.com,https://another.example.com
